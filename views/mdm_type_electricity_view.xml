<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="type_electricity_view_form" model="ir.ui.view">
           <field name="name">ประเภทไฟฟ้า</field>
           <field name="model">mdm.type.electricity</field>
           <field name="arch" type="xml">
               <form string="ประเภทไฟฟ้า">
                   <sheet>
                       <group>
                           <field name="name"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>


        <record id="type_electricity_view_tree" model="ir.ui.view">
            <field name="name">ประเภทไฟฟ้า</field>
            <field name="model">mdm.type.electricity</field>
            <field name="arch" type="xml">
                <tree string="ประเภทไฟฟ้า">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="type_electricity_action" model="ir.actions.act_window">
            <field name="name">ประเภทไฟฟ้า</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mdm.type.electricity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="type_electricity_menu" name="ประเภทไฟฟ้า" parent="main_menu_information" action="type_electricity_action" sequence="10"/>
    </data>
</odoo>